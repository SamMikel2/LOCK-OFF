<body>
    <h1>Lock Off</h1>
    <p>Introduce un nombre y un secreto para crear tu propia caja.</p>
    <div class="input-container">
        <input type="text" id="nombreCaja" placeholder="Nombre de la caja...">
        <input type="text" id="nuevoSecreto" placeholder="Escribe tu secreto...">
        <button onclick="crearCaja()">Crear Caja</button>
    </div>
    <div id="cajas"></div>
    <div id="mensajeFelicitacion" class="felicitacion"></div>

    <script>
        let cajas = {};

        function crearCaja() {
            let nombre = document.getElementById("nombreCaja").value;
            let secreto = document.getElementById("nuevoSecreto").value;
            
            if (nombre.trim() !== "" && secreto.trim() !== "") {
                cajas[nombre] = secreto;
                let cajaDiv = document.createElement("div");
                cajaDiv.classList.add("caja");
                cajaDiv.textContent = nombre;
                cajaDiv.onclick = function() { ingresarSecreto(nombre, cajaDiv); };
                document.getElementById("cajas").appendChild(cajaDiv);
                alert("Caja creada. Usa el nombre para abrirla con la clave secreta.");
            } else {
                alert("Por favor, ingresa un nombre y un secreto antes de continuar.");
            }
        }

        function ingresarSecreto(nombre, cajaElemento) {
            let clave = prompt("Ingresa la clave secreta para la caja " + nombre + ":");
            if (clave === cajas[nombre]) {
                let mensaje = document.getElementById("mensajeFelicitacion");
                mensaje.textContent = "Â¡Felicidades, el secreto de " + nombre + " ha sido descubierto!";
                mensaje.style.display = "block";
                setTimeout(() => {
                    mensaje.style.display = "none";
                    cajaElemento.remove();
                }, 5000);
            } else {
                alert("Ups, esa no es.");
            }
        }
    </script>
</body>
